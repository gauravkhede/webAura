<!DOCTYPE html>
<html>
    <head>
        <title> Web Aura Aptitude</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/aptitude.css">
    </head>
    <body>
        
        <div class="mainAptitudeContainer">
            <div class="topicsContainer">
                <div class="topicElement"><a href="/aptitude/topicName/NumberSystem">Number System </a></div>
                <div class="topicElement">Average</div>
                <div class="topicElement">Arithmetic and Geometric Progression</div>
                <div class="topicElement">Percentage</div>
                <div class="topicElement">Profit Loss Discount</div>
                <div class="topicElement">Simple and Compound Interest</div>
                <div class="topicElement">Ratio and proportions- Ages</div>
                <div class="topicElement">Mixtures and Alligation</div>
                <div class="topicElement">Logarithms</div>
                <div class="topicElement">Clocks and Calender</div>
                <div class="topicElement">Permutation and Combination</div>
                <div class="topicElement">Probability</div>
                <div class="topicElement">Time and Work</div>
                <div class="topicElement">Time, Speed & Distance</div>
                <div class="topicElement">Heights and Distance</div>
                <div class="topicElement">Geometry</div>
                <div class="topicElement">Mensuration</div>
                <div class="topicElement">Data Interpretation and Data Sufficiency</div>
            </div>
            <%= console.log(topicName)  %>
            <% if(topicName){ %>
                <div class="questionsAndOptionsContainer">
                <% for(let question of allQuestions){ %>
                    <div class="questionCardContainer"> 
                        <div class="questionElement"><%= question.question %></div> <hr>
                        <div class="option1Element"><%= question.option1 %> </div>
                        <div class="option2Element"><%= question.option2 %></div>
                        <div class="option3Element"><%= question.option3 %></div>
                        <div class="option4Element"><%= question.option4 %></div>
                    </div>
                    <% } %>
                </div>
            <% }else{ %>
                <div class="questionContainer"><span class="aptitudeCenteredText">Click on Any Topic!</span></div>
                
                <% } %>
            </div>
                
    </body>
</html>